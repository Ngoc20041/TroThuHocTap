@{
    Layout = "~/Views/layouts/Introduction/_App.cshtml";
}
<!-- Middle Section -->
<section class="w-full flex items-center justify-center overflow-hidden bg-gradient-to-b from-[#121212] to-purple-700 2xl:h-[840px] h-[630px]">
    <!-- Content -->
    <div class="container mx-auto px-4 text-center text-white">
        <h1 class="mb-6 text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl lg:text-7xl text-shadow-lg" style="line-height: 1.2">
            <span class="relative text-purple-400 dark:text-purple-300">
                <span class="relative after:absolute after:inset-x-0 after:bottom-0 after:h-[10px] after:bg-purple-400/60 after:-z-10">AI - Trợ Thủ Học Tập</span>
            </span>
        </h1>
        <p class="mx-auto mb-8 max-w-2xl text-lg opacity-90">
            Ứng dụng AI - Trợ Thủ Học Tập được thiết kế để hỗ trợ sinh viên và giáo viên trong quá trình ôn tập, giảng dạy một cách hiệu quả và thông minh. Với công nghệ AI tiên tiến.
        </p>

        <!-- CTA Button -->
        <div class="flex justify-center items-center mt-8" data-aos="fade-up" data-aos-delay="400">
            <form action="@Url.Action("Index","Chat")" method="post">
                <button type="submit"
                        class="relative flex items-center justify-center px-6 py-3 bg-purple-600 hover:bg-purple-500 text-white text-lg font-semibold rounded-full shadow-lg transition-all duration-300 transform hover:scale-105 hover:shadow-purple-500/50">
                    <span class="absolute inset-0 rounded-full bg-purple-500 opacity-40 animate-ping"></span>
                    <span class="relative z-10 pr-2">Trải Nghiệm Thử</span>
                </button>
            </form>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-8 bg-gray-100 sm:py-10 lg:py-16">
    <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="text-center">
            <h2 class="text-3xl font-bold leading-tight text-gray-900 sm:text-4xl xl:text-5xl">
                Các tính năng nổi bật
            </h2>
            <p class="mt-4 text-base leading-7 text-gray-600 sm:mt-8">
                Dưới dây là một số các tính năng.
            </p>
        </div>

        <div class="grid grid-cols-1 mt-10 text-center sm:mt-16 sm:grid-cols-2 gap-8 md:grid-cols-4 xl:mt-24 py-5">
            <!-- Feature 1 -->
            <div class="bg-white shadow-xl rounded-xl p-8 transition-all duration-300 hover:shadow-2xl hover:scale-105">
                <div class="w-16 h-16 rounded-full bg-purple-200 flex justify-center items-center text-purple-700 text-3xl transition-all duration-300 hover:bg-purple-300">
                    <i class="fa-solid fa-chart-column"></i>
                </div>
                <h3 class="mt-6 text-xl font-bold text-gray-900">Tạo bài tập trắc nghiệm tự động</h3>
                <p class="mt-4 text-gray-600">
                    AI sẽ phân tích nội dung bài giảng và tạo ra các câu hỏi trắc nghiệm phù hợp, giúp sinh viên ôn tập dễ dàng hơn.
                </p>
            </div>

            <!-- Feature 2 -->
            <div class="bg-white shadow-xl rounded-xl p-8 transition-all duration-300 hover:shadow-2xl hover:scale-105">
                <div class="w-16 h-16 rounded-full bg-teal-200 flex justify-center items-center text-teal-700 text-3xl transition-all duration-300 hover:bg-teal-300">
                    <i class="fa-solid fa-truck-fast"></i>
                </div>
                <h3 class="mt-6 text-xl font-bold text-gray-900"> Tiết kiệm thời gian cho giáo viên</h3>
                <p class="mt-4 text-gray-600">
                    Hỗ trợ giáo viên trong việc soạn đề thi, đề ôn tập theo hình thức trắc nghiệm, giúp tối ưu thời gian và nâng cao chất lượng giảng dạy.
                </p>
            </div>

            <!-- Feature 3 -->
            <div class="bg-white shadow-xl rounded-xl p-8 transition-all duration-300 hover:shadow-2xl hover:scale-105">
                <div class="w-16 h-16 rounded-full bg-yellow-200 flex justify-center items-center text-yellow-700 text-3xl transition-all duration-300 hover:bg-yellow-300">
                    <i class="fa-solid fa-shield"></i>
                </div>
                <h3 class="mt-6 text-xl font-bold text-gray-900"> Cá nhân hóa nội dung học tập</h3>
                <p class="mt-4 text-gray-600">
                    AI điều chỉnh mức độ câu hỏi theo trình độ người học, giúp từng cá nhân có lộ trình học tập phù hợp.
                </p>
            </div>

            <!-- Feature 4 -->
            <div class="bg-white shadow-xl rounded-xl p-8 transition-all duration-300 hover:shadow-2xl hover:scale-105">
                <div class="w-16 h-16 rounded-full bg-red-200 flex justify-center items-center text-red-700 text-3xl transition-all duration-300 hover:bg-red-300">
                    <i class="fa-solid fa-cloud"></i>
                </div>
                <h3 class="mt-6 text-xl font-bold text-gray-900">Ứng dụng công nghệ hiện đại</h3>
                <p class="mt-4 text-gray-600">
                    Tích hợp AI và công nghệ Xử lý ngôn ngữ tự nhiên (NLP) để đảm bảo chất lượng câu hỏi, mang lại trải nghiệm học tập hiệu quả và chính xác.
                </p>
            </div>

        </div>
    </div>
</section>
